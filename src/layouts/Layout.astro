---
import Analytics from "@vercel/analytics/astro";
const props = Astro.props || {};
const title = props.title ?? "Cuenta atrás para Navidad — faltaparanavidad";
const description =
  props.description ??
  "Cuanto falta para Navidad. ¡Sigue la cuenta atrás hasta Nochebuena y prepárate para las festividades!";
const image = props.image ?? "/og-image.png";
const canonical = props.canonical ?? Astro.site ?? "";
const lang = props.lang ?? "es-ES";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="cuenta atrás, navidad, christmas countdown, calendario, cuenta regresiva, Nochebuena, festivo, vacaciones, diciembre, festividades, falta para navidad, días para navidad, contador regresivo, cuanta falta para navidad, cuando, cuando es, cuando es navidad, cuando navidad, que dia, dia, es, que dia es navidad"
    />
    <link rel="canonical" href={canonical} />
    <meta name="theme-color" content="#264a38" />

    <!-- Open Graph -->
    <meta property="og:locale" content={lang} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={image} />
    <meta property="og:image:alt" content="Cuenta atrás para Navidad" />
  </head>
  <body>
    <slot />
    <div class="hidden">
      <Analytics />
    </div>
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
      background-color: #fef9ef;
      color: #faf5f3;
      display: flex;
      flex-direction: column;
      gap: 2.5rem;
    }
  </style>
</html>
